  "scripts": {
    "test": "jest --verbose --detectOpenHandles",
    "test:watch": "jest --watch --runInBand --detectOpenHandles",
    "build:server": "webpack --config=webpack.server.config.js --mode=production",
    "build:client": "webpack --config=webpack.client.config.js --mode=production",
    "build": "npm run build:server && npm run build:client",
    "dev:server": "ts-node-dev --respawn --transpileOnly ./src/server/index.ts",
    "dev:client": "webpack --watch --config=webpack.client.config.js --mode=development",
    "dev": "npx npm-run-all --parallel dev:server dev:client",
    "start": "npm run build && node ./dist/server/index.js"
  },
